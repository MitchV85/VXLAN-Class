   !
   vlan 30
      rd 2.2.2.101:10030
      route-target both 1:10030
      redistribute learned
   !
   vlan 50
      rd 2.2.2.101:10050
      route-target both 1:10050
      redistribute learned
   !
   address-family evpn
      neighbor SPINE-PEERS activate
   !
   vrf RED
      rd 2.2.2.101:1
      route-target import 1:1
      route-target export 1:1
      redistribute connected
!
router ospf 100
   router-id 2.2.2.101
   network 2.2.2.0/24 area 0.0.0.0
   max-lsa 12000
